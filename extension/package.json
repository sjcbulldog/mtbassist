{
  "name": "mtbassist",
  "displayName": "ModusToolbox Assistant",
  "description": "An Assistant for ModusToolbox",
  "version": "2.5.0",
  "publisher": "c-and-t-software",
  "license": "license.txt",
  "icon": "media/exticon.png",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sjcbulldog/mtbassist.git"
  },
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "modustoolbox",
    "embedded development",
    "ARM cortex"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "command": "mtbassist2.mtbMainPage",
          "group": "navigation@1"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == c",
          "command": "mtbassist2.mtbSymbolDoc",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "mtbassist2.mtbMainPage",
        "title": "ModusToolbox Assistant: Show Main Page",
        "icon": "media/exticon.png"
      },
      {
        "command": "mtbassist2.mtbSymbolDoc",
        "title": "ModusToolbox Assistant: Display documentation for symbol"
      },
      {
        "command": "mtbassist2.addBootloader",
        "title": "ModusToolbox Assistant: Add Bootloader To PSOC Edge Application"
      },
      {
        "command": "mtbassist2.testCommand",
        "title": "ModusToolbox Assistant: Test Command"
      }
    ],
    "keybindings": [
      {
        "command": "mtbassist2.mtbSymbolDoc",
        "key": "ctrl+shift+f1"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "mtbassist2.mtbShell",
          "title": "ModusToolbox Shell"
        }
      ]
    },
    "configuration": {
      "title": "ModusToolbox Assistant",
      "properties": {
        "mtbassist2.autodisplay": {
          "type": "string",
          "enum": [
            "Always",
            "When ModusToolbox Project Loaded",
            "Never"
          ],
          "default": "Always",
          "description": "Automatically display the ModusToolbox Assistant when VSCode is opened."
        },
        "mtbassist2.displayHint": {
          "type": "boolean",
          "default": true,
          "description": "Display the hint on how to re-display the ModusToolbox Assistant when it is closed."
        }
      }
    }
  },
  "extensionDependencies": [
    "vscode.git",
    "llvm-vs-code-extensions.vscode-clangd",
    "marus25.cortex-debug"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "debug": "npm run build && npm run watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "copydist": "copyfiles ../content/single-dist/index.html content",
    "copyshared": "shx cp ../content/src/comms.ts src",
    "copy": "npm run copydist && npm run copyshared",
    "content": "cd ../content && npm run build",
    "build": "npm run content && npm run copy && npm run compile",
    "prerelease" : "vsce publish --pre-release"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "@types/tmp": "^0.2.6",
    "@types/turndown": "^5.0.5",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "copyfiles": "^2.4.1",
    "eslint": "^8.20.0",
    "mocha": "^10.0.0",
    "shx": "^0.4.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vsce": "^2.15.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@vscode/vsce": "^2.32.0",
    "adm-zip": "^0.5.16",
    "copyfile": "^0.1.2",
    "is-wsl": "^2.2.0",
    "markdown-it": "^14.1.0",
    "node-fetch": "^3.3.2",
    "open": "^9.1.0",
    "openurl": "^1.1.1",
    "os": "^0.1.2",
    "request": "^2.88.2",
    "tmp": "^0.2.5",
    "vscode-uri": "^3.1.0",
    "winston": "^3.17.0",
    "xml2js": "^0.6.2"
  }
}
