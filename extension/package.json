{
  "name": "mtbassist",
  "displayName": "ModusToolbox Assistant",
  "description": "An Assistant for ModusToolbox",
  "version": "2.0.0",
  "publisher": "c-and-t-software",
  "license": "license.txt",
  "icon": "media/exticon.png",
  "preview": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/sjcbulldog/mtbassist.git"
  },
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "modustoolbox",
    "embedded development",
    "ARM cortex"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mtbassist.mtbMainPage",
        "title": "ModusToolbox Assistant: Show Main Page"
      }
    ]
  },
  "extensionDependencies": [
    "vscode.git"
  ],  
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "debug" : "npm run build && npm run watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "copydist": "copyfiles ../content/single-dist/index.html content",
    "copyshared": "cp ../content/src/comms.ts src",
    "copy": "npm run copydist && npm run copyshared",
    "content": "cd ../content && npm run build",
    "build": "npm run content && npm run copy && npm run compile"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@vscode/vsce": "^2.32.0",
    "copyfile": "^0.1.2",
    "is-wsl": "^2.2.0",
    "node-fetch": "^3.3.2",
    "open": "^9.1.0",
    "openurl": "^1.1.1",
    "os": "^0.1.2",
    "tmp": "^0.2.1",
    "vscode": "^1.1.34",
    "vscode-uri": "^3.1.0",
    "winston": "^3.17.0",
    "xml2js": "^0.6.2"
  }
}
